
@{
    ViewBag.Title = "People you may know";
}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2>@ViewBag.Title</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="~/Home/Index"><i class="icon_house_alt"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">People</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<hr />
@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.message</h3>
}
<div class="d-md-flex">
    <div class="form-group ml-md-5">
    </div>
    <div class="form-group ml-md-5">
        <form method="post" action="/Profile/Search">
            <input class="akame-blockquote" type="text" name="search" placeholder="Type your friend's name" />
            <button type="submit" class="btn akame-btn">Search</button>
        </form>
    </div>
</div>

@foreach (FacebookDAW.Models.Profile profile in ViewBag.Profiles)
{
    <div class="card col-lg-11 col-centered" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title"><strong>@profile.FirstName @profile.LastName</strong></h5>
            <h6 class="card-subtitle mb-2 text-muted">From: @profile.City, @profile.Country</h6>
            <a class="btn btn-sm"  style="background-color:#BEA756;color:white;" href="/Profile/Show/@profile.Id">Show profile</a>
        </div>
    </div>
    <br />
}


<script type="text/javascript">
    function addFriend() {
        document.getElementById("addFriend").innerHTML = "Friend Request Sent";
    }
</script>
<style>
    .col-centered {
        float: none;
        margin: 0 auto;
    }
</style>
